BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_label
            text:''
            font_size: 48
            multiline: False
            on_text: app.handle_convert()

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(1)

            Button:
                text: 'down'
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert

    Label:
        id: output_label
        font_size: 48
        text: ''
        color: (1, 1, 0, 1)
